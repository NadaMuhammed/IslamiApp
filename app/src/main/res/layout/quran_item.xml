<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/suraTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="البقرة"
        android:textSize="25sp"
        android:fontFamily="@font/elmessiri"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ayatTv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:layout_marginVertical="22dp"/>

    <TextView
        android:id="@+id/ayatTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="285"
        android:textSize="25sp"
        android:fontFamily="@font/elmessiri"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/suraTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/suraTv"
        app:layout_constraintEnd_toStartOf="@id/suraTv"
        android:textAlignment="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>